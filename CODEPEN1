<script>
  function sendForm(e){
    e.preventDefault();
    const f = document.getElementById('contactForm');
    const data = new FormData(f);
    const subject = encodeURIComponent('Demande de devis - ' + data.get('name'));
    const body = encodeURIComponent('Téléphone: ' + data.get('phone') + '\\n\\nMessage:\\n' + data.get('message'));
    // ouvre le client mail de l'utilisateur (solution simple et gratuite)
    window.location.href = 'mailto:ibe.elec@gmail.com?subject='+subject+'&body='+body;
    return false;
  }
</script>
